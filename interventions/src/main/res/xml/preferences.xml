<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:orderingFromXml="true" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="defaultCheckCall"
        android:order="1"
        android:persistent="true"
        android:summary="@string/preferences_default_call_check_summary"
        android:title="@string/preferences_default_call_check" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="defaultCheckExtra"
        android:order="2"
        android:persistent="true"
        android:summary="@string/preferences_default_extra_check_summary"
        android:title="@string/preferences_default_extra_check" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="defaultCheckBilled"
        android:order="3"
        android:persistent="true"
        android:summary="@string/preferences_default_billed_check_summary"
        android:title="@string/preferences_default_billed_check" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="autoDateStart"
        android:order="4"
        android:persistent="true"
        android:summary="@string/preferences_autodatestart_summary"
        android:title="@string/preferences_autodatestart" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="autoDateEnd"
        android:order="5"
        android:persistent="true"
        android:summary="@string/preferences_autodateend_summary"
        android:title="@string/preferences_autodateend" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="autoTimeEnd"
        android:order="6"
        android:persistent="true"
        android:summary="@string/preferences_autotimeend_summary"
        android:title="@string/preferences_autotimeend" >
    </CheckBoxPreference>

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="exportCreateZip"
        android:order="7"
        android:persistent="true"
        android:summary="@string/preferences_default_export_create_zip_check_summary"
        android:title="@string/preferences_default_export_create_zip_check" >
    </CheckBoxPreference>
    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="exportEmailZip"
        android:order="8"
        android:persistent="true"
        android:summary="@string/preferences_default_export_email_zip_check_summary"
        android:title="@string/preferences_default_export_email_zip_check" >
    </CheckBoxPreference>
    
    <EditTextPreference 
        android:key="exportZipMailbox"
        android:order="9"
        android:persistent="true"
        android:summary="@string/preferences_export_zip_mailbox_summary"
        android:title="@string/preferences_export_zip_mailbox"
        />
    
</PreferenceScreen>